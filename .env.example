# =============================================================================
# Google ADK Course - Multi-Provider Environment Configuration
# Following AI Agent Bootcamp Success Pattern: Start FREE, Scale Smart
# =============================================================================

# üÜì LOCAL DEVELOPMENT (RECOMMENDED FOR LEARNING)
# Download Ollama from: https://ollama.ai
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma2:2b
USE_LOCAL_MODELS=true

# üîê GOOGLE AI STUDIO (PRIMARY CLOUD OPTION)
# Get free API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-1.5-flash

# üîê OPENAI (ALTERNATIVE CLOUD OPTION)
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# üîê ANTHROPIC (ALTERNATIVE CLOUD OPTION)
# Get API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# üîê AZURE OPENAI (ENTERPRISE OPTION)
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_DEPLOYMENT_NAME=gpt-4o

# ‚öôÔ∏è SMART PROVIDER SELECTION
# Options: "local", "google", "openai", "anthropic", "azure"
PREFERRED_PROVIDER=local
FALLBACK_PROVIDER=google

# üìä COST TRACKING & LIMITS
MONTHLY_BUDGET_LIMIT=50.00
COST_TRACKING_ENABLED=true
ALERT_THRESHOLD_PERCENT=80

# üõ†Ô∏è DEVELOPMENT SETTINGS
PROJECT_NAME=google-adk-enterprise-agents
DEBUG=False
LOG_LEVEL=INFO
TEMPERATURE=0.7
MAX_TOKENS=1000

# üîí SECURITY SETTINGS
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60
ENABLE_CONTENT_FILTERING=true

# üéØ COURSE SPECIFIC
COURSE_MODE=development
ENABLE_DETAILED_LOGGING=true
